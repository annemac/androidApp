<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="10dp" >

    <TextView
        android:id="@+id/myGamesList_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/header_playerlist"
        android:textSize="18.0sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/playersButton_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/label_done"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/playersButton_cancel"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/playersButton_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/label_cancel"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <ListView
        android:id="@+id/listView_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myGamesList_textView"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/playersButton_done"
        android:layout_alignParentRight="true">

    </ListView>
    
</RelativeLayout><!-- From: file:/C:/UBC/submitted/submitted2/ScavengerHuntGame/res/layout/game_players.xml -->